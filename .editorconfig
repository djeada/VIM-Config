# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,tsx,jsx,json,yml,yaml,html,css,scss}]
indent_size = 2

[Makefile]
indent_style = tab
